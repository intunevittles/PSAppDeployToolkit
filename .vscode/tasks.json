{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build IntuneWin",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}/.vscode/build.ps1"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "TEST in Sandbox",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}/.vscode/sandbox.ps1"
      ]
    },
    {
      "label": "UPLOAD to Intune",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}/.vscode/UploadToIntune.ps1"
      ]
    }
  ]
}